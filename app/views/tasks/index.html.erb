<%= link_to "New Task Item", new_task_path %>
<table>
    <tr>
        <th><%= link_to "Task", :sort => "title" %></th>
        <th>Action 1</th>
        <th>Action 2</th>
    </tr>
    <% @tasks.each do |task| %>
        <tr>
            <td><%= link_to task.title, task_path(task.id)%></td>
            <td><%= link_to "edit", edit_task_path(task[:id])%></td>
            <td><%= link_to "delete", task, method: :delete, data: { confirm: "Are you sure?" }%></td>
        </tr>
    <% end %>
</table>