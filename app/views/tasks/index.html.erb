<%= link_to "New Task Item", new_task_path %>

<% @tasks.each do |task| %>
    <li>
        <%= link_to task.title, task_path(task.id)%>
        <%= link_to "edit", edit_task_path(task[:id])%>
        <%= link_to "delete", task, method: :delete, data: { confirm: "Are you sure?" }%>
    </li>
<% end %>
